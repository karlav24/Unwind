<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/android_lar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/take_a_deep"
        android:layout_width="307dp"
        android:layout_height="58dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="77dp"
        android:text="@string/take_a_deep"
        android:textAppearance="@style/take_a_deep"
        android:gravity="top" />

    <!-- Font family: Habibi, Line height: 25sp -->

    <TextView
        android:id="@+id/relax_and_b"
        android:layout_width="288dp"
        android:layout_height="39dp"
        android:layout_below="@id/take_a_deep"
        android:layout_marginStart="25dp"
        android:layout_marginTop="39dp"
        android:text="@string/relax_and_b"
        android:textAppearance="@style/relax_and_b"
        android:gravity="top" />

    <!-- Font family: Habibi, Line height: 40sp -->

    <TextView
        android:id="@+id/unwind"
        android:layout_width="224dp"
        android:layout_height="90dp"
        android:layout_below="@id/relax_and_b"
        android:layout_marginStart="82dp"
        android:layout_marginTop="27dp"
        android:gravity="top"
        android:text="@string/unwind"
        android:textAppearance="@style/unwind" />

    <!-- Font family: Lily Script One, Line height: 88sp -->

    <ImageView
        android:id="@+id/meditate"
        android:layout_width="356dp"
        android:layout_height="322dp"
        android:layout_below="@id/unwind"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="7dp"
        android:contentDescription="Image"
        android:src="@drawable/meditate"
        android:translationX="20dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_below="@id/meditate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:gravity="top"
        android:text="@string/start"
        android:textAppearance="@style/start"
        android:translationY="-20dp" />
    <!-- Font family: Ligconsolata, Line height: 25sp -->
</RelativeLayout>

